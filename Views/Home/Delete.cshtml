@model Book


<form method="post" asp-action="DeleteBook">
    <input asp-for="Id" hidden />
    <div class= "border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="Year"></label>
            <input asp-for="Year" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled class="form-control" />
            
        </div>

        <div class="mb-3">
            <label asp-for="Whishlist">Add to Whishlist</label>
            <input asp-for="Whishlist" disabled class="form-control" />
            
        </div>


        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-info" style="width:150px">Cancel</a>
    </div>
</form>

